<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivProfileCover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/dark_green_texture" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-160dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:padding="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/btnProfileCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@color/colorPrimaryDarkest"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_menu_camera"
                        android:drawableStart="@drawable/ic_menu_camera"
                        android:text="Camera" />

                    <Button
                        android:id="@+id/btnProfileGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@color/colorPrimaryDarkest"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_menu_gallery"
                        android:drawableStart="@drawable/ic_menu_gallery"
                        android:text="Gallery" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    />
                <EditText
                    android:id="@+id/etProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Petko"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryDarkest"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Last Name:"
                    />
                <EditText
                    android:id="@+id/etProfileLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Petkovski"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryDarkest"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Country:"
                    />
                <EditText
                    android:id="@+id/etProfileCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Macedonia"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryDarkest"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Email:"
                    />
                <EditText
                    android:id="@+id/etProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="showON@showON.com"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryDarkest"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <Button
                        android:id="@+id/btnProfileEdit"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:text="Edit"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPrimaryDarkest"
                        android:layout_centerHorizontal="true"/>

                    <LinearLayout
                        android:id="@+id/llProfileEditButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone">
                        <Button
                            android:id="@+id/btnProfileCancel"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Cancel"
                            android:textColor="@color/colorWhite"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorPrimaryDarkest"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:id="@+id/btnProfileSave"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorWhite"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Save"
                            android:background="@color/colorPrimaryDarkest"
                            android:layout_centerHorizontal="true"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>